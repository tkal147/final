{% extends 'base.html.twig' %}

{% block title %}List Course
{% endblock %}

{% block body %}
	<div class="container">
		<h4>Course</h4>
		{% if is_granted('ROLE_ADMIN') %}
			<a class="btn btn-outline-primary" href="{{ path('course_add') }}">ADD Course</a>
		{% endif %}

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Description</th>
					{% if is_granted('ROLE_ADMIN') %}
						<th scope="col">Manage</th>
					{% endif %}

				</tr>
			</thead>
			<tbody>
				{% for c in courses %}
					<tr>

						<td>{{c.id}}</td>
						<td>{{c.name}}</td>
						<td>{{c.description}}</td>
						{% if is_granted('ROLE_ADMIN') %}
							<td>
								<a href="{{path('course_detail',{'id': c.id})}}" class="btn btn-info">Detail</a>
								<a href="{{path('course_edit',{'id': c.id})}}" class="btn btn-primary">Edit</a>
								<a href="{{path('course_delete',{'id': c.id})}}" class="btn btn-warning">Delete</a>
							</td>
						{% endif %}

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
